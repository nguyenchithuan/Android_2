<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#FFC107"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/img_custom_notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_location_on_24"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_custom_notification"
        android:layout_toLeftOf="@+id/tv_time_custom_notification"
        >

        <TextView
            android:id="@+id/tv_title_custom_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TextAppearance.Compat.Notification.Title"
            />

        <TextView
            android:id="@+id/tv_message_custom_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TextAppearance.Compat.Notification.Info"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_custom_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:23:56"
        style="@style/TextAppearance.Compat.Notification.Time"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>